<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:src="@drawable/gender_m"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageViewGender"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textHeight"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  Height"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:typeface="serif"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/editTextHeight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:textColor="@android:color/holo_green_dark"
                        android:hint="cm"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:layout_weight="1" >

                    </EditText>
                    <EditText
                        android:id="@+id/edittextFeet"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="ft"
                        android:textColor="@android:color/holo_green_dark"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_weight="0.50"
                        >

                    </EditText>
                    <EditText
                        android:id="@+id/edittextInch"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="in"
                        android:textColor="@android:color/holo_green_dark"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_weight="0.50"
                        >
                    </EditText>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/btn_cm"
                        android:id="@+id/imageViewHeight"
                        android:layout_weight="1" />

                </LinearLayout>

                <!-- Text view for HEIGHT(CM)text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/textWeight"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  Weight"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:hint="kg"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="1" >
                    </EditText>
                    <EditText
                        android:id="@+id/edittextWeightInLb"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:hint="lb"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/edittextWeightInST"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:hint="st"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="0.50" />
                    <EditText
                        android:id="@+id/edittextWeightInSTLb"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:hint="lb"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="0.50" >
                    </EditText>
                    <ImageView
                        android:src="@drawable/btn_kg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#ffffff"
                        android:id="@+id/imageViewWeight"
                        android:layout_weight="1" />
                </LinearLayout>
                </LinearLayout>
            <!-- Button for calculating the formula, when pressed, with calculate written over it -->
            <Button
                android:id="@+id/buttonCalculate"
                android:layout_width="150dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fadingEdge="vertical"
                android:longClickable="true"
                android:text="Calculate"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:visibility="visible" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <TextView
                    android:text=" Results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewResult"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <!-- Text view for showing result -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:text="Types"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTypes"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <TextView
                    android:text="Values"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewvalue"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:text="Boer Lean"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewBoerLeanBodyMass"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBoerLeanBodyMass"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:text="James Lean"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewJamesLeanBodyMass"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewJamesLeanBodyMass"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:text="Hume Lean"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewHumeLeanBodyMass"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewHumeLeanBodyMass"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1" />
            </LinearLayout>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewMainPageLean"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="LARGE_BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
