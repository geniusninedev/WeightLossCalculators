<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textViewAge"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  Age"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:typeface="serif"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:textColor="@android:color/holo_green_dark"
                        android:hint="years"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:layout_weight="1">
                    </EditText>

                    <ImageView
                        android:src="@drawable/gender_m"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageViewGender"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textViewBMI"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  BMI"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:typeface="serif"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/editTextBMI"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:textColor="@android:color/holo_green_dark"
                        android:hint="bmi"
                        android:fadingEdgeLength="10dp"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:layout_weight="1" >

                    </EditText>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/btn_bmi"
                        android:id="@+id/ButtonChooserheight"
                        android:layout_weight="1" />

                </LinearLayout>
                </LinearLayout>
            <!-- Button for calculating the formula, when pressed, with calculate written over it -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonCalculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:fadingEdge="vertical"
                    android:longClickable="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Calculate"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/buttonMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:fadingEdge="vertical"
                    android:longClickable="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/information"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:visibility="visible" />
            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewMainPagefat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="SMART_BANNER"
                android:layout_marginTop="1dp"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <TextView
                    android:text=" Result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewResult"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <!-- Text view for showing result -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:text="Types"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTypes"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <TextView
                    android:text="Values"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewvalue"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1" />
                <TextView
                    android:text="Status"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:id="@+id/TextViewStatus"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:text="FAT"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewbmr"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewFAT"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:id="@+id/textViewFATInterpret"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <TextView
                    android:text=" FAT Classification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewFATClassification"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:weightSum="3"
                >
                <TextView
                    android:text="Classification"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewfATClassification"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="14dp" />
                <TextView
                    android:text="Woman"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewfATClassification2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="14dp" />
                <TextView
                    android:text="Men"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewfATClassification3"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:weightSum="3"
                    >
                    <TextView
                        android:text="Athletes"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAthletes"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#dc9b22"
                        android:textSize="14dp" />
                    <TextView
                        android:text="14-20%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAthletes2"
                        android:gravity="center"
                        android:textColor="#dc9b22"
                        android:layout_weight="1"
                        android:textSize="16dp" />
                    <TextView
                        android:text="6-13%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAthletes3"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#dc9b22"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    >
                    <TextView
                        android:text="Fitness"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textViewFitness"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp" />
                    <TextView
                        android:text="21-24%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/textViewFitness2"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                    <TextView
                        android:text="14-17%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/textViewFitness3"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    >
                    <TextView
                        android:text="Acceptable"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAcceptable"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp" />
                    <TextView
                        android:text=" 25-31%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAcceptable2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                    <TextView
                        android:text="18-25%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewAcceptable3"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:weightSum="3"
                    >
                    <TextView
                        android:text="Obese"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewObese"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#c41919"
                        android:textSize="14dp" />

                    <TextView
                        android:text="32%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewObese2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#c41919"
                        android:textSize="16dp" />

                    <TextView
                        android:text="25%"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewObese3"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#c41919"
                        android:textSize="16dp" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginTop="20dp"
                    android:background="#000000" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
